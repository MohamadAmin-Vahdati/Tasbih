<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_centerInParent="true"
    android:background="@drawable/bg_for_dialog"
    android:layoutDirection="ltr"
    >

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/zekr_finished"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:textColor="@color/Grey"
        android:textSize="30sp"
        android:layout_marginTop="25dp"
        android:id="@+id/tv_zekr_finished"
        android:fontFamily="@font/mitra"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tv_zekr_finished"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp">

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Return"
            android:textSize="22sp"
            android:layout_marginEnd="60dp"
            android:background="@drawable/bg_for_confrim_grey"
            android:textColor="@color/white"
            android:id="@+id/btn_return_dialog"
            android:gravity="center"
            android:fontFamily="@font/mitra"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/reset"
            android:textSize="22sp"
            android:background="@drawable/bg_for_confrim_grey"
            android:textColor="@color/white"
            android:id="@+id/btn_again_dialog"
            android:gravity="center"
            android:fontFamily="@font/mitra"/>
    </LinearLayout>

</RelativeLayout>