<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item android:state_pressed="true">
    <shape
        android:shape="rectangle">

        <solid
            android:color="@color/GreyBG"/>

        <stroke
            android:color="@color/Grey"
            android:width="1.5dp"/>
        <corners
            android:radius="10dp"/>
        <padding
            android:top="10dp"
            android:bottom="10dp"
            android:right="35dp"
            android:left="35dp"
            />

    </shape>
</item>

<item>
    <shape
        android:shape="rectangle">

        <solid
            android:color="@color/GreyBG"/>
        <stroke
            android:color="@color/white"
            android:width="1.5dp"/>
        <corners
            android:radius="10dp"/>
        <padding
            android:top="10dp"
            android:bottom="10dp"
            android:right="35dp"
            android:left="35dp"
            />

    </shape>
</item>
</selector>


