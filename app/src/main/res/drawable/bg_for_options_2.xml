<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item android:state_pressed="true">
    <shape
        android:shape="rectangle">
        <solid
            android:color="@color/GreyBG"/>
        <stroke
            android:color="@color/Grey"
            android:width="1.5dp"/>
        <corners
            android:radius="10dp"/>
        <padding
            android:right="80dp"
            android:left="80dp"
            />

    </shape>
</item>

<item>
    <shape
        android:shape="rectangle">
        <solid
            android:color="@color/GreyBG"/>
        <stroke
            android:color="@color/white"
            android:width="1.5dp"/>
        <corners
            android:radius="10dp"/>
        <padding
            android:right="80dp"
            android:left="80dp"
            />

    </shape>
</item>
</selector>



