<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item android:state_pressed="true">
    <shape
        android:shape="rectangle">
        <solid
            android:color="#29FFFFFF"/>
        <stroke
            android:color="@color/Grey"
            android:width="1.5dp"/>
        <corners
            android:radius="5dp"/>
        <padding
            android:right="7dp"
            android:left="7dp"
            android:top="3dp"
            android:bottom="3dp"/>




    </shape>
</item>

<item>
    <shape
        android:shape="rectangle">
        <solid
            android:color="#29FFFFFF"/>
        <stroke
            android:color="@color/white"
            android:width="1.5dp"/>
        <corners
            android:radius="5dp"/>
        <padding
            android:right="7dp"
            android:left="7dp"
            android:top="3dp"
            android:bottom="3dp"/>




    </shape>
</item>
</selector>





